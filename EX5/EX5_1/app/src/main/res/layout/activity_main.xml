<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/holo_green_dark">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chuyển đổi năm dương lịch"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

    <!-- Input for Gregorian Year -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm dương lịch:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginRight="8dp" />

        <EditText
            android:id="@+id/editTextGregorianYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập năm dương lịch"
            android:inputType="number"
            android:background="@android:drawable/editbox_background_normal" />
    </LinearLayout>

    <!-- Button for Conversion -->
    <Button
        android:id="@+id/buttonConvert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển đổi"
        android:textColor="@android:color/black"
        android:background="@android:color/darker_gray"
        android:textStyle="bold" />

    <!-- Input for Lunar Year -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm âm lịch:"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginRight="8dp" />

        <EditText
            android:id="@+id/editTextLunarYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nhập năm âm lịch"
            android:inputType="text"
            android:background="@android:color/holo_yellow_light"
            android:padding="4dp" />
    </LinearLayout>

</LinearLayout>
